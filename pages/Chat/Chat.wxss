/* pages/chat/chat.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
}

/* 聊天内容 */
.news {
  padding-top: 30rpx;
  text-align: center;

  box-sizing: border-box;
}

#flag {
  margin-bottom: 100rpx;
  height: 30rpx;
}

.chat-notice {
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 0;
  color: #666;
}

.historycon {
  height: 100%;
  width: 100%;

  display: flex;
  border-top: 0px;
}


.chat-news {
  width: 100%;
  overflow: hidden;
  display: flex;
  justify-content: flex-end;

}

.ainews {
  justify-content: flex-start;
}

.chat-news .my_right {
  padding: 10rpx 10rpx;
}

.widthFix {
  border-radius: 6px;
  float: right;
}

.chat-news .name {
  margin-right: 10rpx;
}

.chat-news .you_left {
  float: left;

}

.my_right{
 display: flex;
 flex-direction: row;
 justify-content: center;

}

.my_right_info {
  width: 80rpx;
 height: 80rpx;
  text-align: right;

}
.my_right_info view{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
   overflow:hidden
}



.new_img {
  width: 100% !important;
  height: 100% !important;
  border-radius: 20rpx;
   overflow:hidden !important
}

.new_txt {

  display: inline-block;
  border-radius: 6rpx;
  line-height: 60rpx;
  background-color: #FDD789;
  padding: 5rpx 20rpx;
  margin: 0 10rpx;
  text-align: left;
  box-shadow: #808080;
}

.my_right .new_txt {
  margin-right: 0;
}

.you {
  background-color: #32B67A;
}



.ai  {
  width: 80rpx;
 height: 80rpx;
  
}

.my {
  border-color: transparent transparent transparent #95d4ff;
}

.you {
  border-color: transparent #95d4ff transparent transparent;
}

.hei {
  margin-top: 50px;
  height: 20rpx;
}

.history {
  height: 100%;
  margin-top: 15px;
  padding: 10rpx;
  font-size: 14px;
  line-height: 40px;
  word-break: break-all;
  padding-bottom: 60rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  z-index: -1;
}

/* 信息输入区域 */
.message {
 margin-left: 10rpx;
  margin-bottom: 25rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  
}
.message input{
  border-radius: 10rpx;
  background-color: #FFFF;
  height: 70rpx;
  width: 75%;
}
.message button{
  border-radius: 10rpx;
  height: 70rpx;
  width: 150rpx !important;
  font-size: 26rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: normal;
}
